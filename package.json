{
  "name": "arsarazi-backend",
  "version": "1.0.0",
  "description": "Arsarazi Balıkesir - Arsa ve Arazi Uzmanı Backend API",
  "main": "server-basit.js",
  "scripts": {
    "start": "node server-basit.js",
    "dev": "nodemon server-basit.js",
    "server-basit": "node server-basit.js",
    "server-postgres": "node server.js",
    "setup": "node setup-database.js",
    "db-manager": "node database-manager.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "reset-db": "npm run migrate && npm run seed",
    "build:css": "npx tailwindcss -i ./css/style.css -o ./css/tailwind.css --watch",
    "build:css:prod": "npx tailwindcss -i ./css/style.css -o ./css/tailwind.css --minify"
  },
  "keywords": [
    "arsarazi",
    "balıkesir",
    "gayrimenkul",
    "arsa",
    "arazi",
    "crm"
  ],
  "author": "Arsarazi Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
